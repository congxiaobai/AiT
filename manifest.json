{
  "manifest_version": 3,
  "name": "AiT",
  "version": "1.0",
  "description": "Automatically translates text on web pages using a custom GPT-based model.",
  "permissions": [
    "<all_urls>",
    "activeTab",
    "scripting",
    "storage",
    "webRequest",
    "webRequestBlocking"
  ],
  "options_page": "setting.html",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "index.css",
        "logo.png",
        "arrow.svg"
      ],
      "matches": []
    }
  ],
  "icons": {
    "16": "logo.png"
  }
}