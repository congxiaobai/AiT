{
  "manifest_version": 3,
  "name": "AiT",
  "version": "1.0",
  "description": "Automatically translates text on web pages using a custom GPT-based model.",
  "permissions": [
    "<all_urls>",
    "activeTab",
    "scripting",
    "storage"
  ],
  "options_page": "index.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["index.css"]
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "logo.png"
    }
  },
  "icons": {
    "16": "logo.png"
  }
}
